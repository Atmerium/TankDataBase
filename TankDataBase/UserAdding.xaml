<Page x:Class="TankDataBase.UserAdding"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TankDataBase"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserAdding">

    <StackPanel>
        <TextBlock Text="User Adding" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="Red"/>

        <TextBlock Text="User:" Foreground="Red"/>
        <TextBox x:Name="UsernameTextBox" Margin="0,5,0,15" />

        <TextBlock Text="Password:" Foreground="Red"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,5,0,15"/>

        <TextBlock Text="Email:" Foreground="Red"/>
        <TextBox x:Name="EmailTextBox" Margin="0,5,0,15"/>

        <TextBlock Text="Role:" Foreground="Red"/>
        <ComboBox x:Name="RoleComboBox" Margin="0,5,0,15">
            <ComboBoxItem Content="User"/>
            <ComboBoxItem Content="Admin"/>
        </ComboBox>

        <Button Content="Datas of the user saving" Width="170" Margin="0,20,0,0" HorizontalAlignment="Left" Click="Saving" />
    </StackPanel>
</Page>
