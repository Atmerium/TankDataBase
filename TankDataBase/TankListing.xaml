<Page x:Class="TankDataBase.TankListing"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TankDataBase"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TankListing">

    <StackPanel Margin="10">
        <TextBlock Text="List of the tanks" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="Red"/>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="FinderTextBox" Width="200"/>
            <Button Content="Filter" Margin="5,0,0,0" Padding="10,2,10,2" Click="Filter" />
        </StackPanel>
        <ListBox x:Name="TanksListBox" Height="300" />
        <StackPanel Orientation="Horizontal" >
            <Button Content="Deleting Tank" Width="200" Margin="0,20,10,0" HorizontalAlignment="Left" Click="Deleting" />
            <Button Content="Tank editing" Width="200" Margin="10,20,0,0" HorizontalAlignment="Right" Click="Editing" />
        </StackPanel>
    </StackPanel>
</Page>
