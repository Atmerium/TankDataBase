<Window x:Class="TankDataBase.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TankDataBase"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="Img/background.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Welcome to the registration page!" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,0,0,20" FontWeight="Bold" FontSize="20" Foreground="Red"/>

        <TextBlock Text="Username:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"
    Margin="0,0,10,0" Foreground="Red"/>
        <TextBox x:Name="UsernameTextBox" Grid.Row="1" Grid.Column="1" Width="200"/>

        <TextBlock Text="Password:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"
    Margin="0,0,10,0" Foreground="Red"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="2" Grid.Column="1" Width="200"/>

        <TextBlock Text="Password again:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"
    Margin="0,0,10,0" Foreground="Red"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="3" Grid.Column="1" Width="200"/>

        <TextBlock Text="Email:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"
    Margin="0,0,10,0" Foreground="Red"/>
        <TextBox x:Name="EmailTextBox" Grid.Row="4" Grid.Column="1" Width="200"/>

        <Button Content="Registration" Grid.Row="5" Grid.ColumnSpan="2" Width="150" HorizontalAlignment="Center"
    Margin="0,20,0,0" Click="Registration" />

        <Button Content="Back" Grid.Row="6" Grid.ColumnSpan="2" Width="150" HorizontalAlignment="Center"
	Margin="0,20,0,0" Click="Back"/>
    </Grid>
</Window>
