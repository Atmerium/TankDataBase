<Page x:Class="TankDataBase.TanksChange"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TankDataBase"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TanksChange">

    <StackPanel Margin="20">
        <TextBlock Text="Selected Tank" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="Red"/>

        <TextBlock Text="Name:" Foreground="Red"/>
        <TextBox x:Name="NameTextBox" Margin="0,5,0,15"/>

        <TextBlock Text="From:" Foreground="Red"/>
        <TextBox x:Name="FromTextBox" Margin="0,5,0,15"/>

        <TextBlock Text="Production year:" Foreground="Red"/>
        <TextBox x:Name="AgeTextBox" Margin="0,5,0,15"/>

        <TextBlock Text="Category:" Foreground="Red"/>
        <ComboBox x:Name="CategoryComboBox" Margin="0,5,0,15">
            <ComboBoxItem Content="Light Tank"/>
            <ComboBoxItem Content="Medium Tank"/>
            <ComboBoxItem Content="Heavy Tank"/>
            <ComboBoxItem Content="Tank Destroyer"/>
            <ComboBoxItem Content="Self-Propelled Gun"/>
            <ComboBoxItem Content="Superheavy Tank"/>
            <ComboBoxItem Content="Superheavy Tank Destroyer"/>
        </ComboBox>

        <Button Content="Saving the datas of the tank" Width="160" Margin="0,20,0,0" HorizontalAlignment="Left" Click="Editing" />
    </StackPanel>
</Page>
