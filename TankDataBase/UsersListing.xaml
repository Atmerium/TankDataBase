<Page x:Class="TankDataBase.UsersListing"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TankDataBase"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UsersListing">

    <StackPanel Margin="10">
        <TextBlock Text="Users Listed" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="Red"/>
        <ListBox x:Name="UsersListingBox" Height="300" />
        <StackPanel Orientation="Horizontal">
            <Button Content="Delet User" Width="200" Margin="0,20,10,0"
        HorizontalAlignment="Left" Click="Button_Click" />
            <Button Content="Adding User" Width="200" Margin="10,20,0,0"
        HorizontalAlignment="Right" Click="Adding" />
        </StackPanel>
    </StackPanel>
</Page>
